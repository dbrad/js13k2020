{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "typescript",
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			]
		},
		{
			"label": "gulp debug",
			"type": "shell",
			"command": ".\\node_modules\\.bin\\gulp",
			"args": [
				"watch",
				"--env",
				"development"
			],
			"group": "build"
		},
		{
			"label": "gulp release",
			"type": "shell",
			"command": ".\\node_modules\\.bin\\gulp",
			"args": [
				"watch"
			],
			"group": "build"
		},
		{
			"label": "Firefox (DEBUG)",
			"command": "Firefox",
			"windows": {
				"command": "C:\\Program Files\\Mozilla Firefox\\firefox.exe"
			},
			"args": [
				"http://localhost:1234/"
			]
		},
		{
			"label": "Firefox (RELEASE)",
			"command": "Firefox",
			"windows": {
				"command": "C:\\Program Files\\Mozilla Firefox\\firefox.exe"
			},
			"args": [
				"http://localhost:2345/"
			]
		},
		{
			"label": "Build",
			"dependsOn": [
				"typescript",
				"gulp debug",
				//"gulp release",
				"Firefox (DEBUG)",
				//"Firefox (RELEASE)"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}